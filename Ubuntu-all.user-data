#cloud-config
package_update: true
package_upgrade: true

packages:
  - git
  - gh
  - build-essential
  - iperf3
  - gnupg

final_message: |
  cloud-init has finished.
  Your instance is running and ready to use.
  version: $version
  timestamp: $timestamp
  datasource: $datasource
  uptime: $uptime

write_files:
  - content: |
      [boot]
      systemd=true

      [network]
      hostname = "ubuntu-raiden"
    path: /etc/wsl.conf
    append: true
